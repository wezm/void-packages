do_install() {
	make INSTALL_PREFIX="$PKGDESTDIR"/usr \
		INSTALL_MAN_DIR="$PKGDESTDIR"/usr/share/man \
		INSTALL_INFO_DIR="$PKGDESTDIR"/usr/share/info \
		MERCURY_COMPILER="$PKGDESTDIR"/usr/bin/mercury_compile \
		MERCURY_CONFIG_DIR="$PKGDESTDIR"/usr/lib/mercury \
		PARALLEL="$makejobs" install

	rm "${PKGDESTDIR}"/usr/bin/{mdb,mercury,mprof}.bat
}
